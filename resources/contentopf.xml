<?xml version='1.0' encoding='utf-8'?>
<package xmlns="http://www.idpf.org/2007/opf" version="2.0" unique-identifier="uuid_id">
  <metadata xmlns:opf="http://www.idpf.org/2007/opf" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dcterms="http://purl.org/dc/terms/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <dc:title>{{.Title}}</dc:title>
    <dc:creator opf:file-as="Unknown" opf:role="aut">{{.Creator}}</dc:creator>
    <dc:publisher>{{.Publisher}}</dc:publisher>
    <dc:language>jpn</dc:language>
    <dc:identifier opf:scheme="uuid">{{.UUID}}</dc:identifier>
	<meta name="primary-writing-mode" content="vertical-rl"/>
  </metadata>
  <manifest>
    <item id="html" href="1.html" media-type="application/xhtml+xml" />
    <item id="ncx" href="toc.ncx" media-type="application/x-dtbncx+xml" />
	<item id="title" href="title.html" media-type="application/xhtml+xml" />
	<item id="cover" href="cover.png" properties="conver-image" media-type="image/png" />
	{{range .Files}}
	<item id="{{.ID}}" href = "{{.Name}}" media-type="{{.Mtype}}" /> 
 {{end}} 
  </manifest>
  <spine toc="ncx" page-progression-direction="rtl">
  	<itemref idref="title"/>
    <itemref idref="html"/>
  </spine>
</package>

